{
  "$schema": "http://json.schemastore.org/template",
  "author": "enisn",
  "classifications": [
    "Web"
  ],
  "name": "ABP App Template",
  "identity": "ABP.Framework.App.CSharp",
  "groupIdentity": "ABP.Framework.App",
  "shortName": "abp",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "preferNameDirectory": true,
  "sourceName": "MyCompany.MyProject",
  "symbols": {
    "Database": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "EfCore",
      "choices": [
        {
          "choice": "EfCore",
          "description": "Entity Framework Core"
        },
        {
          "choice": "MongoDb",
          "description": "MongoDb Provider"
        }
      ]
    },
    "MongoDb": {
      "type": "computed",
      "value": "(Database == \"MongoDb\")"
    },
    "EfCore": {
      "type": "computed",
      "value": "(Database == \"EfCore\")"
    },
    "ConnectionString":{
      "type": "parameter",
      "datatype": "text",
      "description": "Connection String of new application",
      "defaultValue": "Server=(LocalDb)\\MSSQLLocalDB;Database=MyProject;Trusted_Connection=True",
      "replaces": "__connectionstring"
    }
  },
  "sources": [
    // {
    //   "condition": "(Database == \"EfCore\")",
    //   "rename": {
    //     "__connectionstring" : "Server=(LocalDb)\\MSSQLLocalDB;Database=MyProject;Trusted_Connection=True"
    //   }
    // },
    // {
    //   "condition": "(Database == \"MongoDb\")",
    //   "rename": {
    //     "__connectionstring" : "mongodb://localhost:27017/MyProject"
    //   }
    // },
    {
      "modifiers": [
        {
          "condition": "(Database != \"EfCore\")",
          "exclude": [
            "**/*.EntityFrameworkCore/**/*",
            "**/*.EntityFrameworkCore.Tests/**/*"
          ]
        },
        {
          "condition": "(Database != \"MongoDb\")",
          "exclude": [
            "**/*.MongoDB/**/*",
            "**/*.MongoDB.Tests/**/*"
          ]
        }
      ]
    }
  ]
}